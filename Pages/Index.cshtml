    <style>
        body {
            padding-top: 70px;
            background-color: #f4f4f9;
        }

        .no-underline {
            text-decoration: none;
        }
        .uppercase-text {
            text-transform: uppercase;
        }

        .menu-argomenti {
            position: fixed;
            top: 70px;
            left: 0;
            height: 100%;
            overflow-y: auto;
            width: 250px;
            background-color: #343a40;
            padding-top: 20px;
        }

            .menu-argomenti a {
                display: block;
                padding: 15px;
                color: #ffffff;
                text-decoration: none;
                font-weight: bold;
                border-bottom: 1px solid #495057;
            }

                .menu-argomenti a:hover {
                    background-color: #495057;
                }

        .contenuto-notizie {
            margin-left: 270px;
            padding: 20px;
        }

        .notizia-card {
            background: white;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-bottom: /*20px;*/10px;
            padding: 15px;
            transition: transform 0.2s;
        }

            .notizia-card:hover {
                transform: scale(1.02);
            }

            .notizia-card h2 {
                color: #007bff;
                font-size: 1.3rem;
                font-variant-caps: all-small-caps;
            }

            .notizia-card p {
                color: #6c757d;
            }

            .notizia-card a {
                text-decoration: none;
                color: #28a745;
                font-weight: bold;
            }

                .notizia-card a:hover {
                    text-decoration: underline;
                }

        @@media (max-width: 768px) {
            .menu-argomenti

        {
            position: relative;
            width: 100%;
            height: auto;
            background-color: #343a40;
        }

        .menu-argomenti a {
            display: inline-block;
            padding: 10px;
        }

        .contenuto-notizie {
            margin-left: 0;
        }
    }

    </style>
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-N5B1QVVBC2"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', 'G-N5B1QVVBC2');
    </script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <a class="navbar-brand px-3" href="#">Notizie</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <div class="menu-argomenti d-lg-flex flex-lg-column">
                @foreach (var topic in Model.Topics)
                {
                    <a href="#" data-argomento="@topic" class="uppercase-text">@topic</a>
                }
            </div>
        </div>
    </nav>

    <div class="contenuto-notizie">
        @foreach (var topic in Model.Topics)
        {
            <div id="notizie-@topic" class="notizie" data-argomento="@topic" style="display: none;">
                @foreach (var notizia in Model.NewsByTopic[topic])
                {
                    <a href="/HtmlViewer/@notizia.FilePath" target="_blank" class="no-underline">
                        <div class="notizia-card d-flex justify-content-between align-items-center">
                            <h2 class="mb-0">@notizia.Date.ToString("dd/MM/yyyy HH:mm") - @notizia.Title</h2>
                        </div>
                    </a>


                }
            </div>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Inserisce il popup GDPR nel DOM
        document.body.insertAdjacentHTML('beforeend', `
          <div id="gdpr-popup" class="fixed-bottom bg-primary text-white p-3 rounded shadow-lg" style="margin:20px; z-index: 1050; font-family: Arial, sans-serif; position: fixed;">
            <div class="d-flex justify-content-between align-items-center">
              <p class="mb-0">
                Utilizziamo Google Analytics e Search Console per monitorare il traffico. Consulta la nostra <a href="/privacy-policy" class="text-white text-decoration-underline" target="_blank">Privacy Policy</a>.
              </p>
              <button id="accept-gdpr" class="btn btn-light btn-sm ms-3">Accetta</button>
            </div>
          </div>
        `);

        const gdprConsent = localStorage.getItem('gdprConsent');
        const consentTimestamp = localStorage.getItem('gdprConsentTimestamp');
        const consentValidityDays = 10;
        function isConsentValid() {
          if (!consentTimestamp) return false;
          const currentTime = new Date().getTime();
          const consentTime = parseInt(consentTimestamp, 10);
          const differenceInDays = (currentTime - consentTime) / (1000 * 60 * 60 * 24);
          return differenceInDays < consentValidityDays;
        }
        if (gdprConsent !== 'accepted' || !isConsentValid()) {
          document.getElementById('gdpr-popup').style.display = 'block';
        } else {
            document.getElementById('gdpr-popup').remove();
        }
        document.getElementById('accept-gdpr').addEventListener('click', function() {
          localStorage.setItem('gdprConsent', 'accepted');
          localStorage.setItem('gdprConsentTimestamp', new Date().getTime().toString());
          document.getElementById('gdpr-popup').remove();
        });
    </script>
    <script>
        $(document).ready(function () {
            // Seleziona il primo argomento disponibile e mostra le notizie corrispondenti
            var firstTopic = $('.menu-argomenti a').first().data('argomento');
            if (firstTopic) {
                $('#notizie-' + firstTopic).show(); // Mostra le notizie del primo argomento
            }

            $('.menu-argomenti a').click(function (e) {
                e.preventDefault();
                var argomento = $(this).data('argomento');
                $('.notizie').hide();
                $('#notizie-' + argomento).fadeIn();

                // Chiude il menu a comparsa sui dispositivi mobili
                if ($(window).width() < 992) {
                    $('.navbar-collapse').collapse('hide');
                }
            });
        });

    </script>
</body>
</html>
